{% block lieferzeiten_management_stats_page %}
    <sw-page class="lieferzeiten-management-stats-page">
        <template #content>
            <sw-card :title="$t('lieferzeiten-management.stats.title')">
                <p>{{ $t('lieferzeiten-management.stats.description') }}</p>
            </sw-card>

            <sw-card :title="$t('lieferzeiten-management.stats.kpiTitle')" :isLoading="isLoading">
                <div class="sw-grid sw-grid--gap">
                    <div class="sw-card-section">
                        <p class="sw-card__title">{{ $t('lieferzeiten-management.stats.kpiAverageLeadTime') }}</p>
                        <p class="sw-card__content">{{ formattedAverageLeadTime }}</p>
                    </div>
                    <div class="sw-card-section">
                        <p class="sw-card__title">{{ $t('lieferzeiten-management.stats.kpiOverdueRate') }}</p>
                        <p class="sw-card__content">{{ formattedOverdueRate }}</p>
                    </div>
                    <div class="sw-card-section">
                        <p class="sw-card__title">{{ $t('lieferzeiten-management.stats.kpiVolume') }}</p>
                        <p class="sw-card__content">{{ formattedVolume }}</p>
                    </div>
                </div>
            </sw-card>

            <sw-card :title="$t('lieferzeiten-management.stats.tableTitle')" :isLoading="isLoading">
                <sw-data-grid
                    :dataSource="rows"
                    :showSelection="false"
                    :columns="columns"
                />
            </sw-card>
        </template>
    </sw-page>
{% endblock %}
