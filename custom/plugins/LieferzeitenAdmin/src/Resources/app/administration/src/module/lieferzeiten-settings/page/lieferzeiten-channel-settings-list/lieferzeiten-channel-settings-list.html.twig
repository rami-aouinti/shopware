<sw-page class="lieferzeiten-channel-settings-list">
    <template #smart-bar-header>
        <h2>{{ $tc('lieferzeiten.lms.channelSettings.title') }}</h2>
    </template>

    <template #smart-bar-actions>
        <sw-button v-if="hasEditAccess" :isLoading="isSeedingDemoData" :variant="hasDemoData ? 'danger' : 'default'" @click="onToggleDemoData">{{ hasDemoData ? 'DemoDaten entfernen' : 'DemoDaten speichern' }}</sw-button>
        <sw-button v-if="hasEditAccess" variant="primary" @click="onCreate">{{ $tc('lieferzeiten.lms.channelSettings.create') }}</sw-button>
    </template>

    <template #content>
        <sw-card>
            <sw-alert variant="info" appearance="default" :showIcon="true">
                Ce booléen reste un paramètre global par canal de vente et ne remplace pas la granularité de la matrice des Notification toggles.
            </sw-alert>
            <sw-entity-listing
                v-if="items"
                :items="items"
                :repository="repository"
                :columns="columns"
                :isLoading="isLoading"
                :showSelection="false"
                :allowInlineEdit="hasEditAccess"
                :allowDelete="hasEditAccess"
                :total="total"
                :page="page"
                :limit="limit"
                @page-change="onPageChange"
                @inline-edit-save="onInlineEditSave"
                @inline-edit-cancel="getList"
                @delete="onDelete"
            />
        </sw-card>
    </template>
</sw-page>
