<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true" autoconfigure="true" />

        <service id="ExternalOrders\Entity\ExternalOrderDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="ExternalOrders\Service\FakeExternalOrderProvider" />
        <service id="ExternalOrders\Service\ExternalOrderTestDataService">
            <argument type="service" id="external_order.repository" />
        </service>
        <service id="ExternalOrders\Service\ExternalOrderService">
            <argument type="service" id="external_order.repository" />
        </service>
        <service id="ExternalOrders\Service\TopmSan6OrderMapper" />
        <service id="ExternalOrders\Service\TopmSan6Client" />
        <service id="ExternalOrders\Service\TopmSan6OrderExportService">
            <argument type="service" id="order.repository" />
        </service>
        <service id="ExternalOrders\Service\ExternalOrderSyncService">
            <argument type="service" id="external_order.repository" />
        </service>
        <service id="ExternalOrders\Controller\ExternalOrderController" public="true" />

        <service id="ExternalOrders\ScheduledTask\ExternalOrdersSyncTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="ExternalOrders\ScheduledTask\ExternalOrdersSyncTaskHandler">
            <tag name="messenger.message_handler" />
        </service>

        <service id="ExternalOrders\ScheduledTask\ExternalOrdersExportRetryTask">
            <tag name="shopware.scheduled.task" />
        </service>
        <service id="ExternalOrders\ScheduledTask\ExternalOrdersExportRetryTaskHandler">
            <tag name="messenger.message_handler" />
        </service>

        <service id="ExternalOrders\Subscriber\ExternalOrdersConfigSubscriber">
            <tag name="kernel.event_subscriber" />
        </service>

        <service id="ExternalOrders\Command\GenerateSignedExportUrlCommand" />
    </services>
</container>
