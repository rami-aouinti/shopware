<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="Pickware\ProductSetBundle\Incompatibility\ProductSetIncompatibilityProvider">
            <tag name="pickware_incompatibility_bundle.incompatibility_provider" />
        </service>
        <service id="Pickware\ProductSetBundle\Incompatibility\MagnalisterIncompatibilityVerifier">
            <argument
                type="service"
                id="Pickware\IncompatibilityBundle\Incompatibility\PluginIncompatibilityVerifier"
            />
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <tag name="pickware_incompatibility_bundle.incompatibility_verifier" />
        </service>
    </services>
</container>
