<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="Pickware\ProductSetBundle\Order\OrderUpdater">
            <argument type="service" id="Doctrine\DBAL\Connection" />
            <argument type="service" id="Pickware\DalBundle\EntityManager" />
            <argument type="service" id="Pickware\ShopwareExtensionsBundle\Product\ProductNameFormatterService" />
            <argument type="service" id="Pickware\PickwareErpStarter\Translation\Translator" />
            <tag name="kernel.event_subscriber" />
        </service>
        <service id="Pickware\ProductSetBundle\Order\Snapshot\ProductSetSnapshotBuilder">
            <argument type="service" id="Pickware\DalBundle\EntityManager" />
        </service>
    </services>
</container>
